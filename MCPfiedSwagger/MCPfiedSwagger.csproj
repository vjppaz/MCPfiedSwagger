<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageId>MCPfiedSwagger</PackageId>
		<Version>0.0.2-preview</Version>
		<Authors>vjppaz</Authors>
		<Description>Swagger/OpenAPI extension that generates MCP protocol endpoint for your REST API created in ASP.NET Core.</Description>
		<PackageTags>swagger;openapi;aspnetcore;mcp</PackageTags>
		<RepositoryUrl>https://github.com/vjppaz/MCPfiedSwagger</RepositoryUrl>
		<Copyright>Copyright � Vincent James Paz 2025</Copyright>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\LICENSE" Pack="true" PackagePath="\" />
		<None Include="..\README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
		<PackageReference Include="ModelContextProtocol.AspNetCore" Version="0.3.0-preview.2" />
	</ItemGroup>

</Project>
